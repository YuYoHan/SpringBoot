<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hellospring.mapper.UserMapper">

    <insert id="join">
        insert into user values (#{userId}, #{userPw}, #{userName})
    </insert>
    <select id="login" resultType="com.example.hellospring.domain.UserDTO">
        select * from user where userId=#{userId} and userPw=#{userPw}
    </select>
</mapper>